{{#paper-sidenav-container class="inner-sidenav full-height"}}
	{{!-- menu --}}
	{{#paper-sidenav class="md-whiteframe-z2" name="left" open=leftSideBarOpen onToggle=(action (mut leftSideBarOpen)) }}
		{{!-- title --}}
		{{#paper-toolbar as |toolbar|}}
			{{#paper-toolbar-tools}}Katas{{/paper-toolbar-tools}}
		{{/paper-toolbar}}
		{{!-- items --}}
		{{#paper-content padding=true}}
			{{#link-to 'index'}}Home{{/link-to}}
		{{/paper-content}}
		{{#each model as |kata|}}
			{{#paper-content padding=true}}
				{{#link-to 'katas' kata.id}}{{kata.name}}{{/link-to}}
			{{/paper-content}}
		{{/each}}
	{{/paper-sidenav}}

	{{!-- page content --}}
	{{#paper-card-content class="flex"}}
		{{!-- navbar --}}
		{{#paper-toolbar as |toolbar|}}
			{{#toolbar.tools}}
				{{!-- menu button --}}
				{{#paper-button iconButton=true onClick=(action (mut leftSideBarOpen))}}
					{{paper-icon "menu"}}
				{{/paper-button}}
				{{!-- title --}}
				<h2>Toolbar with Standard Buttons</h2>
				{{!-- separator --}}
				<span class="flex"></span>
				{{!-- buttons --}}
			{{/toolbar.tools}}
		{{/paper-toolbar}}

		<div class="layout-fill layout-align-start-center layout-column full-height">
			{{outlet}}
		</div>
	{{/paper-card-content}}
{{/paper-sidenav-container}}
