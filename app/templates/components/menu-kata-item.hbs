{{#if kata.childs}}
	{{#paper-content padding=true}}{{kata.name}}{{/paper-content}}
	<ul>
		{{#each kata.childs as |child|}}
			{{menu-kata-item kata=child}}
		{{/each}}
	</ul>
{{else}}
	{{#paper-content padding=true}}
		{{#link-to 'katas' kata.slug}}{{kata.name}}{{/link-to}}
	{{/paper-content}}
{{/if}}
